@page "/counter"

<h1>Counter</h1>

<p style="font-family:@fontFamily">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me to add</button>
<button class="btn btn-primary" @onclick="DecrementCount">Click me to subtract</button>

@code {
    private int currentCount = 0;
    private string fontFamily = "Monotype Corsiva";

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }
}
